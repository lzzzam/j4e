                    <div class="jobcardtext">{{ job.company }}</div>
                </div>
                <div class="jobcard_info"><img src="{{ url_for('static', filename='images/pin.svg') }}" loading="lazy"
                        width="20" height="20" alt="" class="mapicon">
                    <div class="jobcardtext jobcardplace">{{ job.place }}</div>
