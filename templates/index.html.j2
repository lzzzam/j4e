{% extends "base.html" %}

{% block body %}

{% for job in context.jobs %}
<div class="wf-section">
    <div class="container w-container">
        <div class="jobcard">
            <div class="jobcard_logo"><img src="{{ url_for('static', filename='images/city.png') }}" loading="lazy"
                    height="60" width="60" alt="" class="image"></div>
            <div class="jobcard_header">
                <div class="jobcard_title">
                    <div class="jobcardtext jobcardtitle">{{ job.title }}</div>
